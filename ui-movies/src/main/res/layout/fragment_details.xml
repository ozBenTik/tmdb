<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/content_loading_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutDescription="@xml/fragment_details_xml_scene"
            tools:context="details.DetailsFragment">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">

                <androidx.appcompat.widget.Toolbar
                    style="@style/Widget.Tmdb.ActionBar"
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    app:title="Lobby"
                    app:menu="@menu/top_menu"/>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/scrolled_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/details_backdrop_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@tools:sample/backgrounds/scenic" />

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:singleLine="true"
                        android:textAppearance="@style/TextAppearance.Tmdb.Headline5"
                        android:background="@color/color_on_image_transparent_back"
                        app:layout_constraintBottom_toBottomOf="@+id/details_backdrop_image_view"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="@color/color_on_image_text" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="16dp" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_end="16dp" />


                    <ImageView
                        android:id="@+id/details_poster_image_view"
                        android:layout_width="136dp"
                        android:layout_height="231dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintStart_toStartOf="@+id/guideline_start"
                        app:layout_constraintTop_toBottomOf="@+id/details_backdrop_image_view"
                        tools:src="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/details_status_title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?colorSecondary"
                        android:textAppearance="?textAppearanceHeadline6"
                        android:text="Status"
                        app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                        app:layout_constraintTop_toTopOf="@+id/details_top_rating_title_text_view" />

                    <TextView
                        android:id="@+id/details_number_of_votes_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="@style/TextAppearance.Tmdb.Subtitle2"
                        app:layout_constraintEnd_toEndOf="@+id/details_rating_precentage_text_view"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/details_rating_precentage_text_view"
                        app:layout_constraintTop_toBottomOf="@+id/details_rating_precentage_text_view" />

                    <TextView
                        android:id="@+id/details_rating_precentage_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="56dp"
                        android:layout_marginTop="8dp"
                        android:textAppearance="@style/TextAppearance.Tmdb.Subtitle2"
                        app:layout_constraintStart_toEndOf="@+id/details_poster_image_view"
                        app:layout_constraintTop_toBottomOf="@+id/details_top_rating_title_text_view" />

                    <ImageView
                        android:id="@+id/details_rating_star_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:src="@android:drawable/star_off"
                        app:layout_constraintBottom_toTopOf="@+id/details_budget_title_text_view"
                        app:layout_constraintStart_toEndOf="@+id/details_poster_image_view"
                        app:layout_constraintTop_toBottomOf="@+id/details_top_rating_title_text_view"
                        app:layout_constraintVertical_bias="0.381" />

                    <TextView
                        android:id="@+id/details_overview_title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="Overview"
                        android:textColor="?colorSecondary"
                        android:textAppearance="?textAppearanceHeadline6"
                        app:layout_constraintStart_toStartOf="@id/guideline_start"
                        app:layout_constraintTop_toBottomOf="@+id/details_poster_image_view" />

                    <TextView
                        android:id="@+id/details_overview_text_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="@style/TextAppearance.Tmdb.Subtitle1"
                        app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                        app:layout_constraintStart_toStartOf="@id/guideline_start"
                        app:layout_constraintTop_toBottomOf="@+id/details_overview_title_text_view" />

                    <TextView
                        android:id="@+id/details_budget_title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="28dp"
                        android:textColor="?colorSecondary"
                        android:textAppearance="?textAppearanceHeadline6"
                        android:text="Budget"
                        app:layout_constraintStart_toEndOf="@+id/details_poster_image_view"
                        app:layout_constraintTop_toBottomOf="@+id/details_number_of_votes_text_view" />

                    <TextView
                        android:id="@+id/details_budget_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toEndOf="@+id/details_poster_image_view"
                        app:layout_constraintTop_toBottomOf="@+id/details_budget_title_text_view" />

                    <TextView
                        android:id="@+id/details_status_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:minLines="1"
                        android:textAppearance="@style/TextAppearance.Tmdb.Subtitle1"
                        app:layout_constraintBottom_toBottomOf="@+id/details_rating_precentage_text_view"
                        app:layout_constraintEnd_toEndOf="@+id/details_status_title_text_view"
                        app:layout_constraintStart_toStartOf="@+id/details_status_title_text_view" />

                    <TextView
                        android:id="@+id/details_top_rating_title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:text="Top Rating"
                        android:textColor="?colorSecondary"
                        android:textAppearance="?textAppearanceHeadline6"
                        app:layout_constraintStart_toEndOf="@+id/details_poster_image_view"
                        app:layout_constraintTop_toTopOf="@+id/details_poster_image_view" />

                    <TextView
                        android:id="@+id/details_revenue_title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Revenue"
                        android:textColor="?colorSecondary"
                        android:textAppearance="?textAppearanceHeadline6"
                        app:layout_constraintStart_toEndOf="@+id/details_poster_image_view"
                        app:layout_constraintTop_toBottomOf="@+id/details_budget_text_view" />

                    <TextView
                        android:id="@+id/details_revenue_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toEndOf="@+id/details_poster_image_view"
                        app:layout_constraintTop_toBottomOf="@+id/details_revenue_title_text_view" />

                    <com.example.moviestmdb.core_ui.widget.ActorsCarrouselView
                        android:id="@+id/actorsView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintBottom_toTopOf="@+id/recommendedMoviesView"
                        app:layout_constraintTop_toBottomOf="@+id/details_overview_text_view" />

                    <com.example.moviestmdb.core_ui.widget.RecommendedCarouselView
                        android:id="@+id/recommendedMoviesView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingBottom="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/actorsView" />

                    <TextView
                        android:background="?colorSurface"
                        android:id="@+id/favorite_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?colorSecondary"
                        android:textAppearance="?textAppearanceHeadline6"
                        app:layout_constraintTop_toTopOf="@+id/details_budget_title_text_view"
                        app:layout_constraintEnd_toEndOf="@id/guideline_end"
                        android:text="Favorite"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/favorites_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@id/favorite_title"
                        app:layout_constraintStart_toStartOf="@+id/favorite_title"
                       app:layout_constraintTop_toBottomOf="@+id/favorite_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.motion.widget.MotionLayout>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_baseline_favorite_24"
            android:text="Add to Favorites"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="bottom|end" />
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
