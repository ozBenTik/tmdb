<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

<androidx.constraintlayout.motion.widget.MotionLayout
    android:id="@+id/constraintLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/fragment_details_xml_constraintlayout3_scene"
    tools:context="details.DetailsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.0"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="Lobby">

            <ImageView
                android:id="@+id/logout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/ic_baseline_exit_to_app_24" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scrolled_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/details_backdrop_image_view"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/top_gun"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:singleLine="true"
                android:text="test"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                app:layout_constraintBottom_toBottomOf="@+id/details_backdrop_image_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/details_backdrop_image_view"
                app:layout_constraintVertical_bias="0.9" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="16dp" />


            <ImageView
                android:id="@+id/details_poster_image_view"
                android:layout_width="136dp"
                android:layout_height="231dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/details_backdrop_image_view"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/details_status_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:text="Status"
                android:textAppearance="@style/TextAppearance.Tmdb.ListPrimary"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintTop_toTopOf="@+id/details_top_rating_title_text_view" />

            <TextView
                android:id="@+id/details_number_of_votes_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.Tmdb.Body2"
                app:layout_constraintEnd_toEndOf="@+id/details_rating_precentage_text_view"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/details_rating_precentage_text_view"
                app:layout_constraintTop_toBottomOf="@+id/details_rating_precentage_text_view" />

            <TextView
                android:id="@+id/details_rating_precentage_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.Tmdb.Body2"
                app:layout_constraintStart_toEndOf="@+id/details_poster_image_view"
                app:layout_constraintTop_toBottomOf="@+id/details_top_rating_title_text_view" />

            <ImageView
                android:id="@+id/details_rating_star_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:src="@android:drawable/star_off"
                app:layout_constraintBottom_toTopOf="@+id/details_budget_title_text_view"
                app:layout_constraintStart_toEndOf="@+id/details_poster_image_view"
                app:layout_constraintTop_toBottomOf="@+id/details_top_rating_title_text_view"
                app:layout_constraintVertical_bias="0.381" />

            <TextView
                android:id="@+id/details_overview_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Overview"
                android:textAppearance="@style/TextAppearance.Tmdb.ListPrimary"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/details_poster_image_view" />

            <TextView
                android:id="@+id/details_overview_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/details_overview_title_text_view" />

            <TextView
                android:id="@+id/details_budget_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:text="Budget"
                android:textAppearance="@style/TextAppearance.Tmdb.ListPrimary"
                app:layout_constraintStart_toEndOf="@+id/details_poster_image_view"
                app:layout_constraintTop_toBottomOf="@+id/details_number_of_votes_text_view" />

            <TextView
                android:id="@+id/details_budget_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.Tmdb.Body2"
                app:layout_constraintStart_toEndOf="@+id/details_poster_image_view"
                app:layout_constraintTop_toBottomOf="@+id/details_budget_title_text_view" />

            <TextView
                android:id="@+id/details_status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:minLines="1"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.Tmdb.Body2"
                app:layout_constraintBottom_toBottomOf="@+id/details_rating_precentage_text_view"
                app:layout_constraintEnd_toEndOf="@+id/details_status_title_text_view"
                app:layout_constraintStart_toStartOf="@+id/details_status_title_text_view" />

            <TextView
                android:id="@+id/details_top_rating_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Top Rating"
                android:textAppearance="@style/TextAppearance.Tmdb.ListPrimary"
                app:layout_constraintStart_toEndOf="@+id/details_poster_image_view"
                app:layout_constraintTop_toTopOf="@+id/details_poster_image_view" />

            <TextView
                android:id="@+id/details_revenue_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Revenue"
                android:textAppearance="@style/TextAppearance.Tmdb.ListPrimary"
                app:layout_constraintStart_toEndOf="@+id/details_poster_image_view"
                app:layout_constraintTop_toBottomOf="@+id/details_budget_text_view" />

            <TextView
                android:id="@+id/details_revenue_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.Tmdb.Body2"
                app:layout_constraintStart_toEndOf="@+id/details_poster_image_view"
                app:layout_constraintTop_toBottomOf="@+id/details_revenue_title_text_view" />

            <com.example.moviestmdb.core_ui.widget.ActorsCarrouselView
                android:id="@+id/actorsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toTopOf="@+id/recommendedMoviesView"
                app:layout_constraintTop_toBottomOf="@+id/details_overview_text_view" />

            <com.example.moviestmdb.core_ui.widget.RecommendedCarouselView
                android:id="@+id/recommendedMoviesView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingBottom="16dp"
                app:layout_constraintTop_toBottomOf="@+id/actorsView" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/favorites_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorite"
                app:layout_constraintBottom_toTopOf="@+id/details_overview_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/details_number_of_votes_text_view"
                app:layout_constraintTop_toBottomOf="@+id/details_status_text_view"
                app:layout_constraintVertical_bias="0.183" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.motion.widget.MotionLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
