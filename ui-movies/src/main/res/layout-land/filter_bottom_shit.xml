<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/standard_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="10dp"
        android:text="Apply Filters"
        android:textAppearance="@style/TextAppearance.Tmdb.Headline5"
        app:layout_constraintBottom_toTopOf="@+id/dividerTitleGenres"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cancel_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="x"
        android:textAppearance="@style/TextAppearance.Tmdb.Headline6"
        app:layout_constraintBottom_toTopOf="@+id/dividerTitleGenres"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dividerTitleGenres"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/guideline_title"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="56dp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline_title"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="365dp" />

            <TextView
                android:id="@+id/genres_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Genres"
                android:textAppearance="@style/TextAppearance.Tmdb.Headline6"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:id="@+id/genres_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/guideline_mid"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/genres_title">

                <ProgressBar
                    android:id="@+id/genres_loading_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="visible" />


                <ScrollView
                    android:id="@+id/genres_chip_container2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/genres_chip_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                </ScrollView>
            </FrameLayout>

            <TextView
                android:id="@+id/dates_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Release Dates"
                android:textAppearance="@style/TextAppearance.Tmdb.Headline6"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/genres_container"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/from_date_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:background="@drawable/dates_background"
                android:gravity="center"
                android:minLines="2"
                android:textAppearance="@style/TextAppearance.Tmdb.Body1"
                app:layout_constraintTop_toBottomOf="@+id/dates_title"
                app:layout_constraintEnd_toStartOf="@id/guideline_end"
                app:layout_constraintStart_toEndOf="@+id/from_date_picker"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/from_date_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/from_date_text_view"
                app:layout_constraintStart_toStartOf="@+id/dates_title"
                app:layout_constraintTop_toBottomOf="@+id/dates_title"/>

            <TextView
                android:id="@+id/to_date_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/dates_background"
                android:gravity="center"
                android:minLines="2"
                android:textAppearance="@style/TextAppearance.Tmdb.Body1"
                app:layout_constraintStart_toStartOf="@+id/from_date_text_view"
                app:layout_constraintEnd_toEndOf="@id/from_date_text_view"
                app:layout_constraintTop_toBottomOf="@+id/from_date_text_view"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/to_date_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="@+id/to_date_text_view"
                app:layout_constraintBottom_toBottomOf="@+id/to_date_text_view"
                app:layout_constraintStart_toStartOf="@+id/from_date_picker"
                app:layout_constraintTop_toBottomOf="@+id/from_date_picker" />

            <View
                android:id="@+id/dividerDatePickerLanguage"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintStart_toEndOf="@id/guideline_mid"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintTop_toBottomOf="@+id/to_date_picker" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/language_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Language"
                android:theme="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                app:layout_constraintTop_toBottomOf="@+id/dividerDatePickerLanguage"
                app:layout_constraintStart_toEndOf="@id/guideline_mid"
                app:layout_constraintEnd_toStartOf="@id/guideline_end">

                <AutoCompleteTextView
                    android:id="@+id/language_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textColor="@color/tmdb_black_800" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/submit_button"
                style="@style/TextAppearance.Tmdb.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Submit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_mid"
                app:layout_constraintTop_toBottomOf="@+id/language_input_layout" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>